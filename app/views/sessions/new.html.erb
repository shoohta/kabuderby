<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

    	<div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="password">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>


      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", '#' %></p>
  </div>
</div>